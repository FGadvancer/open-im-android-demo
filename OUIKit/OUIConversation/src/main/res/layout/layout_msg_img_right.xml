<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/readVanishNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/sendState2"
            android:textColor="#ff5496eb"
            android:textSize="12sp"
            android:visibility="gone" />

        <io.openim.android.ouiconversation.widget.SendStateView
            android:id="@+id/sendState2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/contentGroup2" />

        <RelativeLayout
            android:id="@+id/contentGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/avatar2">

            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/content2"
                android:layout_width="140dp"
                android:layout_height="240dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:src="@mipmap/ic_chat_photo"
                app:corner_radius="7dp"
                app:type="round" />

            <ImageView
                android:id="@+id/videoPlay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_chat_video_play"
                android:visibility="gone" />
        </RelativeLayout>

        <io.openim.android.ouicore.widget.AvatarImage
            android:id="@+id/avatar2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_my_friend" />

    </RelativeLayout>
</FrameLayout>
