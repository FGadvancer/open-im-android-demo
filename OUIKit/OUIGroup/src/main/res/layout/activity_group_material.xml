<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="GroupVM"
            type="io.openim.android.ouicore.vm.GroupVM" />

        <import type="android.view.View" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:orientation="vertical"
            tools:context=".ui.GroupMaterialActivity">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_title_high"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/back"
                        layout="@layout/view_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/group_set"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sty_radius_6_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="19dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="19dp">

                        <RelativeLayout
                            android:id="@+id/avatarEdit"
                            android:layout_width="53dp"
                            android:layout_height="53dp">

                            <io.openim.android.ouicore.widget.AvatarImage
                                android:id="@+id/avatar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@mipmap/ic_my_group" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="-3dp"
                                android:layout_marginBottom="-3dp"
                                android:padding="5dp"
                                android:src="@mipmap/ic_edit"
                                android:visibility="@{GroupVM.isOwnerOrAdmin?View.VISIBLE:View.GONE}" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginRight="5dp"
                                  android:textColor="@color/txt_black"
                                  android:text="@{GroupVM.groupsInfo.groupName}"
                                  android:textSize="17sp" />
                              <ImageView
                                  android:id="@+id/groupName"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:src="@mipmap/ic_g_edit2"
                                  android:padding="4dp"
                                  android:visibility="@{GroupVM.isOwnerOrAdmin?View.VISIBLE:View.GONE}" />
                          </LinearLayout>

                            <TextView
                                android:id="@+id/groupId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{GroupVM.groupsInfo.groupID}"
                                android:textColor="#ff8e9ab0"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/qrCode"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:src="@mipmap/ic_qrcode"
                            android:textColor="#ff999999"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/groupMember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/sty_radius_6_white"
                        android:orientation="vertical"
                        android:paddingBottom="12dp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:paddingTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:id="@+id/all"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="@string/view_all_member"
                                android:textColor="@color/txt_black"
                                android:textSize="17sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:src="@mipmap/ic_right" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="16dp"
                        android:background="@drawable/sty_radius_6_white"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="20dp"
                            android:text="聊天内容"
                            android:textColor="#ff8e9ab0"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="16dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chatHistory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@null"
                                android:drawableTop="@mipmap/ic_g_search_chat"
                                android:gravity="center_horizontal"
                                android:text="@string/search"
                                android:textColor="@color/txt_shallow"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/photo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:button="@null"
                                android:drawableTop="@mipmap/ic_g_photo"
                                android:gravity="center_horizontal"
                                android:text="@string/picture"
                                android:textColor="@color/txt_shallow"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/video"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:button="@null"
                                android:drawableTop="@mipmap/ic_g_video"
                                android:gravity="center_horizontal"
                                android:text="@string/video"
                                android:textColor="@color/txt_shallow"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/file"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@null"
                                android:drawableTop="@mipmap/ic_g_file"
                                android:gravity="center_horizontal"
                                android:text="@string/file"
                                android:textColor="@color/txt_shallow"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/sty_radius_6_white"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/bulletin"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/group_bulletin"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#ff999999"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:src="@mipmap/ic_right" />

                        </LinearLayout>

                        <include layout="@layout/view_dividing_line" />
                        <LinearLayout
                            android:id="@+id/groupManage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:visibility="@{GroupVM.isOwnerOrAdmin?View.VISIBLE:View.GONE}">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_weight="1"
                                android:text="@string/group_manage"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:src="@mipmap/ic_right" />

                        </LinearLayout>



                        <include layout="@layout/view_dividing_line" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/myName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:background="@drawable/sty_radius_6_white"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/in_group_name"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff999999"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/ic_right" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/topChat"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/top_chat"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <io.openim.android.ouicore.widget.SlideButton
                            android:id="@+id/topSlideButton"
                            android:layout_width="38dp"
                            android:layout_height="23dp" />
                    </LinearLayout>
                    <include layout="@layout/view_dividing_line" />
                    <LinearLayout
                        android:id="@+id/notDisturb"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/msg_dont_disturb"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <io.openim.android.ouicore.widget.SlideButton
                            android:id="@+id/no_disturb"
                            android:layout_width="38dp"
                            android:layout_height="23dp" />
                    </LinearLayout>
                    <include layout="@layout/view_dividing_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/sty_radius_6_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:animateLayoutChanges="true"
                        android:paddingRight="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/periodic_deletion"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <io.openim.android.ouicore.widget.SlideButton
                                android:id="@+id/periodicDeletion"
                                android:layout_width="38dp"
                                android:layout_height="23dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/periodicDeletionTime"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/time_set"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/periodicDeletionStr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="#ff333333"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_right" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clearRecord"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/clear_chat_record"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_right" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/quitGroup"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="100dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/quit_group"
                        android:textColor="#fff85050"
                        android:textSize="18sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </FrameLayout>


</layout>
